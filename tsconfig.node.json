{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false, // Certifique-se de que noEmit seja false ou removido
    "composite": true, // Adicione isso
    "declaration": true, // Necessário para gerar arquivos .d.ts
    "outDir": "./dist"
  },
  "include": ["*.ts", "*.js"], // Ajuste conforme necessário
  "exclude": ["node_modules", "dist"]
}